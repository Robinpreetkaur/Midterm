<Window x:Class="mid1.Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mid1"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid>
        <DataGrid Name="gridCombined" HorizontalAlignment="Left" Height="244" Margin="31,70,0,0" 
                  VerticalAlignment="Top" Width="322" SelectionChanged="DataGrid_SelectionChanged" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding}" 
                                Foreground="Black" Width="360" Header="Combined" IsReadOnly="false" />
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Grid" HorizontalAlignment="Left" Margin="47,16,0,0" VerticalAlignment="Top" Width="95"/>

    </Grid>
</Window>

